---
import HomeIcon from '../../public/icons/HomeIcon.astro'


const navegatiosLinks =[
  {
    name:'Home',
    path:'/'
  },
  {
    name:'Movies',
    path:'/out-of-services'
  },
  {
    name:'Series',
    path:'/out-of-services'
  },
 
]
---

<nav class="  sticky sm:relative top-0 z-50 flex flex-row w-screen max-w-[1440px] mx-auto px-8 items-center h-[70px] justify-between bg-[#090B13] text-white mb-6">
  <section class="flex items-center flex-row">
  <div class="flex sm:hidden  flex-row gap-6" >
    <a class="flex justify-center gap-4" href="/"> 
      <HomeIcon class="size-6"/>
      home</a>
    
    
  </div>
  <ul class="sm:flex flex-row w-auto gap-6 ml-8 hidden">
  
   {
    navegatiosLinks.map(link =>(
      <li class=" group" ><a class="flex flex-row items-center text-[14px] w-12  gap-3" href={link.path}>
      
         {link.name}
        </a>

        <div class="bg-white w-0  h-1 group-hover:w-full transition-all duration-300 ease-linear rounded-lg"></div>
        
        </li>
    ))
   }
  </ul>
</section>
<div>

  <a class=" border  bg-primaryHover border-white py-2 px-4 rounded-lg right-8" href="/login"> Log In</a>
</nav>