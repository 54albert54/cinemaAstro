---
import Layout from "../layouts/Layout.astro";
import type { TMovie}from '../utils/useProvider.ts'
import {IMG_PATH ,dataTv ,dataMovies}from '../utils/useProvider.ts'
import HerorAstro from "../components/HerorAstro.astro";

import CategorySecction from "../components/CategorySecction.astro";
import ShowDataSections from "../components/ShowDataSections.astro";

const data:TMovie[] = dataMovies
const dataTV:TMovie[] = dataTv
const imageMovie = data.map(movie =>({img:IMG_PATH+ movie.poster_path,title:movie.title, id:movie.id}))




---

<Layout title="Peliculas y mas.">
	<HerorAstro    allimg={imageMovie} />
	<CategorySecction/>
	<ShowDataSections  title="Recomended for you"  data={data}/>
	<ShowDataSections  title="TV Shows" data={dataTV}/>

</Layout>

